@model List<pr2.Models.Record>
@{
    ViewData["Title"] = "Home Page";
}
@if(ViewData["Search"] != null){
    <p>Searching for: @ViewData["Search"]</p>
}

<table>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td style="width: 150px; height: 200px; text-align: center; border: thin solid #000000;">
                <img src="/images/@Model[i].coverURL"/>
                <br/><a href="/Record/Index/@Model[i].id/"><b>@Model[i].title</b></a>
                <br/><b>@Model[i].artist</b>
            </td>
        </tr>
    }
</table>